<Window x:Class="Group_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Yönetim Paneli" Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#f5f5f5">

    <Grid Margin="10">
        <TabControl FontSize="14" Background="White" BorderBrush="#ccc" BorderThickness="1">

            <!-- Kullanıcılar -->
            <TabItem Header="Kullanıcılar" Tag="Users">
                <Grid Background="White" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Başlık -->
                    <TextBlock Text="Kullanıcı Yönetimi" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,10"/>

                    <!-- Kullanıcı Listesi -->
                    <ListBox x:Name="UserListBox"
                 Grid.Row="1"
                 BorderBrush="#ccc" 
                 BorderThickness="1"
                 FontSize="14"/>
                </Grid>
            </TabItem>


            <!-- Dosya İzinleri -->
            <TabItem Header="Dosya İzinleri" Tag="FilePermissions">
                <Grid Background="White">
                    <TextBlock Text="Dosya izinleri ekranı"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="18"
                               Foreground="Gray"/>
                </Grid>
            </TabItem>

            <!-- Grup İzinleri -->
            <TabItem Header="Grup İzinleri" Tag="GroupPermissions">
                <Grid Background="White">
                    <TextBlock Text="Grup izinleri ekranı"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="18"
                               Foreground="Gray"/>
                </Grid>
            </TabItem>

            <!-- Dosya Sahipliği -->
            <TabItem Header="Dosya Sahipliği" Tag="FileOwnership">
                <Grid Background="White">
                    <TextBlock Text="Dosya sahipliği ekranı"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="18"
                               Foreground="Gray"/>
                </Grid>
            </TabItem>

            <!-- Şifre Yönetimi -->
            <TabItem Header="Şifre Yönetimi" Tag="PasswordManagement">
                <Grid Background="White">
                    <TextBlock Text="Şifre yönetimi ekranı"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="18"
                               Foreground="Gray"/>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
