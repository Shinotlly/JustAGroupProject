<Window x:Class="Group_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Yönetim Paneli" Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#f5f5f5">

    <Grid Margin="10">
        <TabControl FontSize="14" Background="White" BorderBrush="#ccc" BorderThickness="1">

            <!-- Kullanıcılar -->
            <TabItem Header="Kullanıcılar" Tag="Users">
                <Grid Background="White" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Başlık -->
                    <TextBlock Text="Kullanıcı Yönetimi" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,10"/>

                    <!-- Kullanıcı Listesi -->
                    <ListBox x:Name="UserListBox"
                 Grid.Row="1"
                 BorderBrush="#ccc" 
                 BorderThickness="1"
                 FontSize="14"/>
                </Grid>
            </TabItem>


            <!-- Dosya İzinleri -->
            <TabItem Header="Dosya Yönetimi" Tag="FilePermissions">
                <Grid Margin="10">
                    <!-- 3 satır: 1. Dosya seçme, 2. Bilgiler, 3. CheckBox alanı -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Dosya Seç Butonu -->
                        <RowDefinition Height="*"/>
                        <!-- Bilgi ve Liste -->
                        <RowDefinition Height="Auto"/>
                        <!-- CheckBoxlar -->
                    </Grid.RowDefinitions>

                    <!-- Dosya Seçme Butonu -->
                    <Button Content="Dosya Seç"
                Width="120"
                Height="30"
                HorizontalAlignment="Left"
                Click="SelectFile_Click"/>

                    <!-- Bilgi Alanı -->
                    <StackPanel Grid.Row="1" Margin="0,10,0,0">
                        <TextBlock x:Name="FilePathText"
                       FontWeight="Bold"
                       FontSize="14"
                       Margin="0,0,0,5"/>
                        <TextBlock x:Name="FileInfoText"
                       TextWrapping="Wrap"
                       Margin="0,0,0,10"
                       FontSize="13"/>
                        <ListBox x:Name="AclListBox"
                     Margin="0,5,0,0"
                     Height="200"
                     BorderBrush="LightGray"
                     BorderThickness="1"/>
                    </StackPanel>

                    <!-- Okunabilir/Yazılabilir kutuları -->
                    <StackPanel Grid.Row="2"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="0,10,0,0">
                        <CheckBox x:Name="ReadOnlyCheck"
              Content="Sadece Okunabilir"
              Margin="20,0"
              FontSize="13"
              Click="ReadOnlyCheck_Click"/>

                        <CheckBox x:Name="WritableCheck"
              Content="Yazılabilir"
              Margin="20,0"
              FontSize="13"
              Click="WritableCheck_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>



            <!-- Grup İzinleri -->
            <TabItem Header="Grup İzinleri" Tag="GroupPermissions">
                <Grid Background="White">
                    <TextBlock Text="Grup izinleri ekranı"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="18"
                               Foreground="Gray"/>
                </Grid>
            </TabItem>

            <!-- Dosya Sahipliği -->
            <TabItem Header="Dosya Sahipliği" Tag="FileOwnership">
                <Grid Background="White">
                    <TextBlock Text="Dosya sahipliği ekranı"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="18"
                               Foreground="Gray"/>
                </Grid>
            </TabItem>

            <!-- Şifre Yönetimi -->
            <TabItem Header="Şifre Yönetimi" Tag="PasswordManagement">
                <Grid Background="White">
                    <TextBlock Text="Şifre yönetimi ekranı"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="18"
                               Foreground="Gray"/>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
