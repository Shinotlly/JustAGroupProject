<Window x:Class="Group_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Yönetim Paneli" Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#f5f5f5">

    <Grid Margin="10">
        <TabControl FontSize="14" Background="White" BorderBrush="#ccc" BorderThickness="1">

            <!-- Kullanıcılar -->
            <TabItem Header="Kullanıcılar" Tag="Users">
                <Grid Background="White" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Başlık -->
                    <TextBlock Text="Kullanıcı Yönetimi" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="0,0,0,10"/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center">
                        <!-- Kullanıcı Adı -->
                        <TextBlock Text="Kullanıcı Adı:" 
               VerticalAlignment="Center" 
               FontWeight="Bold" 
               Margin="0,0,5,0"/>
                        <TextBox x:Name="NewUsernameText" 
             Width="140" 
             Height="26" 
             VerticalContentAlignment="Center"
             ToolTip="Yeni kullanıcı adı girin"/>

                        <!-- Parola -->
                        <TextBlock Text="Parola:" 
               VerticalAlignment="Center" 
               FontWeight="Bold" 
               Margin="15,0,5,0"/>
                        <PasswordBox x:Name="NewPasswordBox" 
                 Width="140" 
                 Height="26" 
                 VerticalContentAlignment="Center"
                 ToolTip="Kullanıcı parolası girin"/>

                        <!-- Buton -->
                        <Button x:Name="CreateUserButton" 
            Content="Kullanıcı Oluştur" 
            Click="CreateUserButton_Click" 
            Width="150" 
            Height="26" 
            Margin="15,0,0,0"/>
                    </StackPanel>


                    <!-- Kullanıcı listesi -->
                    <ListBox x:Name="UserListBox" Grid.Row="2" BorderBrush="#ccc" BorderThickness="1" FontSize="14"/>
                </Grid>
            </TabItem>


            <!-- Dosya İzinleri -->
            <TabItem Header="Dosya Yönetimi" Tag="FilePermissions">
                <Grid Margin="10">
                    <!-- 3 satır: 1. Dosya seçme, 2. Bilgiler, 3. CheckBox + Sahiplik alanı -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Dosya Seç Butonu -->
                        <RowDefinition Height="*"/>
                        <!-- Bilgi ve Liste -->
                        <RowDefinition Height="Auto"/>
                        <!-- CheckBox + Sahiplik -->
                    </Grid.RowDefinitions>

                    <!-- Dosya Seçme Butonu -->
                    <Button Content="Dosya Seç"
                Width="120"
                Height="30"
                HorizontalAlignment="Left"
                Click="SelectFile_Click"/>

                    <!-- Bilgi Alanı -->
                    <StackPanel Grid.Row="1" Margin="0,10,0,0">
                        <TextBlock x:Name="FilePathText"
                       FontWeight="Bold"
                       FontSize="14"
                       Margin="0,0,0,5"/>
                        <TextBlock x:Name="FileInfoText"
                       TextWrapping="Wrap"
                       Margin="0,0,0,10"
                       FontSize="13"/>
                        <ListBox x:Name="AclListBox"
                     Margin="0,5,0,0"
                     Height="200"
                     BorderBrush="LightGray"
                     BorderThickness="1"/>
                    </StackPanel>

                    <!-- Okunabilir/Yazılabilir kutusu + Sahipliği Değiştirme Alanı -->
                    <StackPanel Grid.Row="2"
                    Orientation="Vertical"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">

                        <!-- Okunabilir Toggle -->
                        <CheckBox x:Name="ReadOnlyToggle"
                      Content="Sadece Okunabilir"
                      Margin="0,0,0,10"
                      FontSize="13"
                      Checked="ReadOnlyToggle_Checked"
                      Unchecked="ReadOnlyToggle_Checked"/>

                        <!-- Sahipliği Değiştir Alanı -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBox x:Name="NewOwnerTextBox"
                         Width="160"
                         Height="26"
                         VerticalContentAlignment="Center"
                         Margin="0,0,10,0"
                         ToolTip="Yeni sahip kullanıcı adı"/>
                            <Button x:Name="ChangeOwnerButton"
                        Content="Sahipliği Değiştir"
                        Width="150"
                        Height="26"
                        Click="ChangeOwnerButton_Click"/>
                        </StackPanel>

                    </StackPanel>
                </Grid>
            </TabItem>


            <!-- Şifre Yönetimi -->
            <TabItem Header="Şifre Yönetimi" Tag="PasswordManagement">
                <Grid Background="White">
                    <TextBlock Text="Şifre yönetimi ekranı"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="18"
                               Foreground="Gray"/>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
